@*@inherits TransitionComponentBase*@
@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p class="display-4" role="status">Current count: <span class="counter">@currentCount</span></p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
